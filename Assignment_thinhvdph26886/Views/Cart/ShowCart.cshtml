@model IEnumerable<Assignment_thinhvdph26886.Models.CartDetails>

@{
    ViewData["Title"] = "ShowCart";
    var tong = ViewBag.tongtien;
}

<center><h1 style="color:blueviolet">CART</h1></center>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Color
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Description
            </th>
            <th>
                Pay
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         
            <td>
                @foreach (var product in ViewData["Name"] as SelectList)
                 {
                  if (product.Value == item.IDSP.ToString())
                  {
                   @product.Text
                    }
                 }
            </td>
            <td>
                @foreach (var product in ViewData["Color"] as SelectList)
                 {
                  if (product.Value == item.IDSP.ToString())
                  {
                   @product.Text
                    }
                 }
            </td>
            <td>
                    <input id="form1" min="0" name="quantity" max="" value="@Html.DisplayFor(modelItem => item.Quantity)" type="number"
                       class="form-control form-control-sm" style="width: 70px;" /> 
            </td>
            <td style="color: red">
                @foreach ( var product in ViewData["Price"] as SelectList)
                 {
                  if (product.Value == item.IDSP.ToString())
                  {
                   @product.Text
                    }
                 }
            </td>
            <td>
                @foreach (var product in ViewData["Description"] as SelectList)
                 {
                  if (product.Value == item.IDSP.ToString())
                  {
                      <img src="~/images/@product.Text" width="200px">
                   
                    }
                 }
            </td>
            <td style="color: red">
                    @((item.Quantity * item.Product.Price).ToString()) <a style="color:black">VND</a>
            </td>
            <td>
                <button class="btn btn-warning">
                    @Html.ActionLink("Delete", "Delete", new {  id=item.ID })
                </button> 
            </td>
                
        </tr>
        }
    </tbody>
</table>
<center>
    <a asp-action="Pay" asp-controller="Bill">
        <button style="background-color: red" type="submit" @*class="btn btn-primary btn-block btn-lg"*@>
            <div class="d-flex justify-content-between">
                <span>
                    Thanh toán
                </span>
            </div>
        </button>
    </a>
</center>

